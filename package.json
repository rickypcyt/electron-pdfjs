{
  "name": "electron-pdfjs-react",
  "private": true,
  "version": "1.0.0",
  "description": "PDF.js Electron Viewer with React",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "bunx vite",
    "build": "bun run build:all",
    "preview": "bunx vite preview",
    "start": "bun run dev",
    "dev:electron": "bunx concurrently -k \"bun run dev\" \"bunx wait-on http://localhost:5173 && electron .\"",
    "build:electron": "bunx tsc -p electron.tsconfig.json && bunx tsc -p tsconfig.node.json",
    "build:app": "bunx vite build --outDir dist",
    "build:all": "bun run build:app && bun run build:electron",
    "electron": "electron .",
    "package": "bun run build:all && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pdfjs-dist": "^4.0.269"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  }
}
